<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Account Creation</title>
        <link rel = "stylesheet" href = "../style.css">
        <style>

            html {
                font: bold;
                color: greenyellow;
                background-color: black;
            }

            body {
                font-family: Arial, sans-serif;
            }

            h1 {
            position: relative;
            left: 50%;
            }

            .login-box {
            position: relative;
            left: 50%;
            border: whitesmoke solid 2px;
            width: 50%;
            padding: 8px;
            }
        </style>
    </head>

    <body>
        <h1>Welcome to the Anime Database</h1> <br><br>

        <form class = "login-box" method="post" action="/create">
            <h2>Account Creation</h2><br>
            <strong>Enter Email Address:</strong><input type="text" name = "email" id="email" required> <br><br>
            <strong>Enter Password:</strong><input type="text" name = "password1" id = "password1" required> <br><br>

            <button type="submit" onclick = submitApp()>Create Account</button><br><br>
        <a href="/" style="color: aqua;">Back to Login Page</a>
        </form>

        <script>

            function submitApp() {
                if(window.confirm("Are you sure that you want to create Account")) {
                    console.log("Confirmed!");
                    document.getElementById("the_fields").submit();
                }
                else{
                    clearFields();
                    console.log("Application canceled")
                }
            }

            function clearFields() {
                const field = document.getElementById("the_fields");
                const inputs = field.querySelectorAll("input");
                inputs.forEach(input => input.value = '');
                //clears the textarea field
                field.querySelector("textarea").value = ""
            }

        </script>
    </body>

    
</html>